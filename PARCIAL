import sqlite3
import os

APP_PATH = os.getcwd()
DB_PATH = APP_PATH+'/my_database.db'

con = sqlite3.connect(DB_PATH)
cursor = con.cursor()

try:
    cursor.execute("""
    CREATE TABLE FUTBOL(
    ID          INT PRIMARE KEY NOT NULL,
    PAIS        TEXT            NOT NULL,
    JUGADOR     TEXT            NOT NULL
    )
    
    """)

except Exception as e:
    print = e

